<Page x:Class="CAR_RENT.pages.UserInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CAR_RENT.pages"
      mc:Ignorable="d" 
      d:DesignHeight="690" 
      d:DesignWidth="1280"
      Background="#3A4149"
      FontFamily="Comfortaa"
      Title="UserInfoPage"
      FontSize="16"
      Foreground="White">
    <Page.Resources>
        <Style x:Key="TextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" SnapsToDevicePixels="True" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0 0 0 14"/>
            <Setter Property="Background" Value="#E1E3E4"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style x:Key="Label" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="10*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Column="1"
                Grid.Row="1"
                Background="white"
                >
            <Border.OpacityMask>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Border CornerRadius="20" Height="600" Width="1000" Background="White"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.OpacityMask>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            Grid.Row="1"
                           VerticalAlignment="Center"
                           Margin="50 0"
                            >
                <Label>Логин</Label>
                <TextBox Style="{DynamicResource TextBox}"
                         x:Name="login"
                            />
                </StackPanel>
                <StackPanel Grid.Column="0"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Пароль</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="password"
                            />
                </StackPanel>
                <StackPanel Grid.Column="0"
                            Grid.Row="3"
                             VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Подтверждение пароля</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="passwordConf"
                            />
                </StackPanel>
                <StackPanel Grid.Column="0"
                            Grid.Row="4"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Фамилия</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="surname"
                            />
                </StackPanel>
                <StackPanel Grid.Column="0"
                            Grid.Row="5"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Имя</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="name"
                            />
                </StackPanel>
                <StackPanel Grid.Column="0"
                            Grid.Row="6"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Отчество</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="patronymic"
                            />
                </StackPanel>
                <StackPanel Grid.Column="0"
                            Grid.Row="7"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Дата рождения</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="bday"
                            />
                </StackPanel>
                <StackPanel Grid.Column="0"
                            Grid.Row="8"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Номер телефона</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="telephone"
                            />
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Домашний адрес</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="adress"
                            />
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Grid.Row="2"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Серия паспорта</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="passport_series"
                            />
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Grid.Row="3"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Номер паспорта</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="passport_id"
                            />
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Grid.Row="4"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Номер ВУ</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="license_id"
                            />
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Grid.Row="5"
                            VerticalAlignment="Center"
                           Margin="50 0"
                            >
                    <Label>Опыт вождения</Label>
                    <TextBox Style="{DynamicResource TextBox}"
                         x:Name="experience"
                            />
                </StackPanel>
                <Button Grid.Column="1"
                        Grid.Row="8"
                        Margin="100 5">
                    Сохранить изменения
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
