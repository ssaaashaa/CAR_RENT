<Page x:Class="CAR_RENT.pagesForAdmin.accidentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CAR_RENT.pagesForAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="690" 
      d:DesignWidth="1280"
      Background="#3A4149"
      FontFamily="Comfortaa"
      Title="accidentsPage"
      FontSize="16"
      Foreground="White">
    <Page.Resources>
        <ResourceDictionary Source="../templates/Styles.xaml" />
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*">
            </ColumnDefinition>
            <ColumnDefinition Width="10*">
            </ColumnDefinition>
            <ColumnDefinition Width="*">
            </ColumnDefinition>
            <ColumnDefinition Width="3.5*">
            </ColumnDefinition>
            <ColumnDefinition Width="3.5*">
            </ColumnDefinition>
            <ColumnDefinition Width="*">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGridAccidents"
                  Grid.Column="1"   
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  FontSize="14"
                  Height="400"
                  VerticalAlignment="Bottom"
                  Margin="0 0 0 30"
                  MouseDown="DGridAccidents_MouseDown">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="auto" />
                <DataGridTextColumn Header="ID контракта" Binding="{Binding CONTRACT_ID}" Width="auto"/>
                <DataGridTextColumn Header="Дата ДТП" Binding="{Binding DATE, StringFormat='{}{0:dd.MM.yyyy}'}" Width="auto"/>
                <DataGridTextColumn Header="Величина ущерба" Binding="{Binding DAMAGE_COST}" Width="auto"/>
                <DataGridTextColumn Header="Описание ущерба" Binding="{Binding DAMAGE_DESCRIPTION}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    Grid.Row="1"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="0 5 0 0"
                    >
            <TextBlock Margin="0 0 0 35"
                       TextWrapping="Wrap"
                       Width="190"
                       VerticalAlignment="Top">Поиск по ID клиента:</TextBlock>
            <StackPanel Orientation="Vertical"
                        >

                <TextBox x:Name="id"
                             PreviewKeyDown="space_PreviewKeyDown"
                     Width="120"
                     TextAlignment="Center"
                     Background="Transparent"
                     Foreground="White"
                     BorderThickness="0 0 0 0.5"
                         TextChanged="id_TextChanged"></TextBox>
              
            </StackPanel>

        </StackPanel>
      
        <Grid Grid.Row="1"
              Grid.Column="3"
              HorizontalAlignment="Center"
              Margin="0 60 0 0"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
               
            </Grid.RowDefinitions>
            <TextBlock Text="ID контракта" Grid.Row="0" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="Дата" Grid.Row="1" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="Величина ущерба" Grid.Row="2" VerticalAlignment="Center"></TextBlock>
            <TextBlock Text="Описание ущерба" Grid.Row="3" VerticalAlignment="Center"></TextBlock>
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="4"
              HorizontalAlignment="Center"
                 Margin="0 60 0 0"
             >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition ></RowDefinition>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
               
            </Grid.RowDefinitions>
            <TextBox x:Name="ID" Text="{Binding ID}" Grid.Row="10" Visibility="Hidden" Width="200" Height="20" Style="{StaticResource textBoxOuputData }"></TextBox>
            <TextBlock x:Name="CONTRACT_ID"  Text="{Binding CONTRACT_ID}" Grid.Row="0" Width="200" VerticalAlignment="Center"></TextBlock>
            <TextBlock x:Name="DATE" Grid.Row="1" VerticalAlignment="Center" Text="{Binding DATE, StringFormat='{}{0:dd.MM.yyyy}'}" Width="200" ></TextBlock>
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal">
                <TextBlock x:Name="DAMAGE_COST" Text="{Binding DAMAGE_COST}" Width="80" VerticalAlignment="Center"></TextBlock>
                <Label Foreground="White" VerticalAlignment="Center">BYN</Label>
            </StackPanel>
            <TextBlock x:Name="DAMAGE_DESCRIPTION" Margin="0 9" Text="{Binding DAMAGE_DESCRIPTION}" Grid.Row="3" Grid.RowSpan="6" Width="200" ></TextBlock>
        </Grid>
    </Grid>
</Page>
