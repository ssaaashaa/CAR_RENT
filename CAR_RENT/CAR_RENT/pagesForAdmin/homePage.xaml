<Page x:Class="CAR_RENT.pagesForAdmin.homePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CAR_RENT.pagesForAdmin"
      mc:Ignorable="d" 
       d:DesignHeight="720" 
      d:DesignWidth="1280"
      Background="#3A4149"
      FontFamily="Comfortaa"
      Title="homePage1">

    <Grid>
        <StackPanel     Margin="0 200 0 0"
                        VerticalAlignment="Top"
                        x:Name="home"
                        >
            <TextBlock Foreground="White"
                           FontSize="24"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Padding="170 30"
                          >
                    Вы можете выбрать таблицу, с которой хотите поработать, или заполнить форму о произошедшем ДТП.
            </TextBlock>
            <Button Height="50"
                        Width="200"
                        FontSize="18"
                        Background="#64AFB6"
                        Foreground="white"
                        Click="Button_Click">
                Заполнить форму
            </Button>
        </StackPanel>
    </Grid>
</Page>
