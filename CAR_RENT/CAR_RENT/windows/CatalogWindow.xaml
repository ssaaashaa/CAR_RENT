<Window x:Class="CAR_RENT.windows.CatalogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENT.windows"
        mc:Ignorable="d"
        Title="CatalogWindow" 
        Height="1080" 
        Width="1920"
        Background="#3A4149"
        ResizeMode="NoResize"
        WindowState="Maximized"
        FontFamily="Comfortaa"
        >
    <Grid>
        <StackPanel Height="60"
                    VerticalAlignment="Top"
                    Background="#2B3238">
        <StackPanel Height="60"
                    Width="auto"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Background="#2B3238"
                    Margin="0 0 150 0"
                    
                    >
           
            <Button FontSize="18"
                    Width="180"
                    Background="Transparent"
                    Foreground="White"
                    Margin="0 0 80 0"
                    
                   >
                Личный кабинет
            </Button>
            <Button FontSize="18"
                    Width="80"
                    Background="Transparent"
                    Foreground="White"
                    >Выйти</Button>
            
        </StackPanel>
        </StackPanel>
        <Border Height="415" Width="395"
                HorizontalAlignment="Left"
                >
            <Border.OpacityMask>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <Border CornerRadius="20" Height="415" Width="395" Background="White"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Border.OpacityMask>

            <Grid Height="415" Width="395" 
            Background="#2B3238">
                
            </Grid>

        </Border>
    </Grid>
</Window>
