<Window x:Class="CAR_RENT.windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENT.windows"
        mc:Ignorable="d"
        Title="AdminWindow" 
         Height="800" 
        Width="1550"
        Background="#3A4149"
        ResizeMode="NoResize"
        FontFamily="Comfortaa"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary Source="../templates/Styles.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*">
            </ColumnDefinition>
            <ColumnDefinition Width="15*">
            </ColumnDefinition>
            <ColumnDefinition Width="0.7*">
            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*"></RowDefinition>
            <RowDefinition Height="15*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" 
              Grid.RowSpan="2"
              Background="#2B3238"></Grid>
        <StackPanel Orientation="Vertical"
                    Grid.Column="0"
                    Grid.RowSpan="2"
                    VerticalAlignment="Center">
            <Button Style="{StaticResource buttonAdmin}"
                    x:Name="CONTRACTS"
                    Click="CONTRACTS_Click"
                   >
                <Image Source="../images/contracts.png"
                       />
            </Button>
            <Button Style="{StaticResource buttonAdmin}" 
                    x:Name="CARS"
                    Click="CARS_Click">
                <Image Source="../images/cars.png"
                       />
            </Button>
            <Button Style="{StaticResource buttonAdmin}"
                    x:Name="MODEL_INFO"
                        Click="MODEL_INFO_Click">
                <Image Source="../images/carInfo.png"
                       />
            </Button>
            <Button Style="{StaticResource buttonAdmin}"
                    x:Name="CLIENTS"
                    Click="CLIENTS_Click">
                <Image Source="../images/clients.png"
                       />
            </Button>
            <Button Style="{StaticResource buttonAdmin}">
                <Image Source="../images/accidents.png"
                       />
            </Button>
            <Button Style="{StaticResource buttonAdmin}"
                    x:Name="promocode"
                    Click="promocode_Click">
                <Image Source="../images/promocode.png"
                       />
            </Button>
            <Button Style="{StaticResource buttonAdmin}"
                    Margin="0 60 0 0"
                    Width="60"
                   x:Name="HOME"
                    Click="HOME_Click">
                <Image Source="../images/home.png"
                       />
            </Button>


        </StackPanel>
        <Button Grid.Column="2"
                Grid.Row="0"
                Background="Transparent"
                BorderThickness="0"
                Click="Button_Click"
                >
            <Image Source="../images/close.png"
                   Width="50"
                   Height="50"
                   />
        </Button>
        <Frame Grid.Column="1"
            Grid.ColumnSpan="2"
               Grid.Row="1"
               x:Name="frame"
              NavigationUIVisibility="Hidden">
        </Frame>
        
    </Grid>
</Window>
